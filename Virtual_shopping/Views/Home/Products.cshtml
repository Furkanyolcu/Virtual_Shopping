@using Virtual_Shopping.Models
@model List<Products>
<head>
    <link rel="stylesheet" href="~/ProductsPage/style.css" />
    <title>Stylish E-commerce Store</title>
</head>
<body>
    <header>
        <nav>
            <div class="logo">StyleShop</div>
            <ul class="nav-links">
                <li><a href="#home">Home</a></li>
                <li><a href="#products">Products</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
            <button class="cta-button" onclick="toggleCart()">Go to Cart</button>
        </nav>
    </header>

    <main>
        <section class="hero">
            <div class="hero-content">
                <h1>Discover Your Style</h1>
                <p>Explore our latest collection and find your perfect look.</p>
                <button class="cta-button">Shop Now</button>
            </div>
        </section>

        <section class="products">
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="product-card">
                        <img src="@item.ProductImageURL" alt="@item.ProductName" />
                        <h2>@item.ProductName</h2>
                        <p>@item.ProductDescription</p>
                        <p>@item.ProductPrice.ToString("C")</p>
                        <button class="cta-button">Add to Cart</button>
                    </div>
                }
            }
        </section>
    </main>

    <footer>
        <p>&copy; 2023 StyleShop. All rights reserved.</p>
    </footer>

    <!-- Cart Sidebar -->
    <div id="cart">
        <h2 class="cart-title">Your Cart</h2>
        <ul class="cart-items"></ul>
        <div class="cart-total">Total: $0.00</div>
        <button class="cart-close" onclick="toggleCart()">Close Cart</button>
    </div>
    <script src="~/ProductsPage/main.js"></script>
</body>
</html>
